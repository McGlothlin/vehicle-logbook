@page
@model Logbook.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle.Mileage)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.Vehicle.Mileage))*@
            @String.Format("{0:N0}", Model.Vehicle.Mileage)
        </dd>
    </dl>
</div>
@if (Model.ServiceItems != null)
{
    <div>
        <h4>Maintenance</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Item</dt>
            <dt class="col-sm-10">Interval</dt>
        </dl>
        <dl class="row">
            @foreach (ServiceItem item in Model.ServiceItems.Where(i => i.VehicleId == Model.Vehicle.Id))
            {
                <dd class="col-sm-2">
                    @item.Task
                </dd>
                <dd class="col-sm-10">
                    @String.Format("{0:N0}", item.Interval)
                </dd>
            }
        </dl>
    </div>
}
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Vehicle.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
